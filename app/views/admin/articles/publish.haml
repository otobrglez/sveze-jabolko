%h1= link_to page_title("Publishing article"), admin_articles_path()

%br/

= render :partial => "articles/simple_article", :locals => {:simple_article => @article}

= form_for([:admin,@article], :url => publish_admin_article_path(@article)) do |f|
	= link_to t("articles"), [:admin,:articles]
	|
	=f.submit t("publish_article")