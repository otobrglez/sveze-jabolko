:css
	#article input[type="text"],
	#article textarea{ width:95% }
	#errors{ display:block; width:95%; border:1px solid red; }

=form_for([:admin,@article]) do |f|

	-if f.object.errors.any?
		#form_errors
			%ul
				- f.object.errors.full_messages.each do |e|
					%li=e

	%ul#article
		%li
			%strong=f.label :title, "Naslov"
			%br/
			=f.text_field :title
		%li
			%strong=f.label :image, "Image"
			%br/
			=f.text_field :image
		%li
			%strong=f.label :slug, "Slug"
			%br/
			=f.text_field :slug
			
		%li
			%strong=f.label :category, "Kategorija"
			=f.collection_select :category_id, Category.all, :id, :to_s
		
		%li
			%strong=f.label :tags_list, "Značke"
			=f.text_field :tag_list
		%li
			%strong=f.label :intro, "Uvod"
			%br/
			=f.text_area :intro, :rows => 5
		
		%li
			%strong=f.label :body, "Vsebina"
			%br/
			=f.text_area :body
			
		%li
			%strong=f.label :published, "Objavljeno?"
			=f.check_box :published
		%li
			%br/
			%strong Avtorji
			%ul
				- User.authors.each do |author|
					%li
						%label
							= author
							= check_box_tag "article[author_ids][]", author.id, @article.authors.include?(author)
					
		
		%li
			%br/
			=link_to "Nazaj", admin_articles_path()
			
			- unless f.object.new_record?
				|
				=link_to "Odstrani", admin_article_path(f.object), :method => :delete
				|
				
			=f.submit "Shrani"
			