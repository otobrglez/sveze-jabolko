.article{:id => "article-#{article.id}"}

	-if article.image
		=link_to article_path(article.category, article), :class => "mainimage" do
			%img.mainimage{:src => article.image, :title => article, :alt => article}

	%h2=link_to article, article_path(article.category, article)

	.meta.clear
		.numofcom
			=link_to "0", article_path(article.category, article)
		
		%span.created_at
			=sanitize article_created(article)
	
	.content
		- if (defined? mode).nil?
			=sanitize article.intro_html
		- elsif mode == :show
			=sanitize article.body_html
			- if article.sources != nil && article.sources.size != 0
				-if article.sources.size == 1
					=t(:source)
					\:
					=link_to article.sources[0].title, article.sources[0].url
				-elsif  article.sources.size > 1
					=t(:sources)
					\:
					- article.sources.each do |source|
						=link_to source, source.url
					
	- if (defined? mode).nil?
		.readmore
			=link_to "Preberi cel ƒçlanek", article_path(article.category, article)
	- elsif mode == :show
		-# Meta...
		
		
%hr/