/*
 * Administration
 *
 */

#admin-deck{
	background-color:white;
	text-align:left;
	margin:0px auto;
	max-width:1000px;
	border:1px solid #CCC;
	
	#wrap{
		
		#nav{
			ul,li{
				height:40px;
				line-height:40px;
			}
			li{
				float:left;
				a{
					height:40px;
					display:inline-block;
					padding-left:10px;
					padding-right:10px;
					font-size:18px;
				}
			}			
		}
		
		ul{
			background-color: #eee;
			
			border-bottom:1px solid #CCC;
		}
		
		#content{
			margin:10px;
			min-height:400px;
		}
		
		#footer{
			margin:10px;
			height:30px;
			line-height:30px;
		}
	}
	
}
