/*
 * Administration
 *
 */

#admin-deck{
	background-color:white;
	text-align:left;
	margin:0px auto;
	max-width:1000px;
	border:1px solid #CCC;
	
	#wrap{
		
		#nav{
			ul,li{
				height:40px;
				line-height:40px;
			}
			li{
				float:left;
				a{
					height:40px;
					display:inline-block;
					padding-left:10px;
					padding-right:10px;
					font-size:18px;
				}
			}	
			
			li.root{
				float:right;
				a{ color:blue; }
			}
			
			li a{
				background-position: left center;
				background-repeat:no-repeat;
				padding-left:20px;
				margin-left:5px; 
			}
			
			li.articles a{
				background-image: url("<%= asset_path 'articles.png' %>");
			}
			
			li.categories a{
				background-image: url("<%= asset_path 'categories.png' %>");
			}
			
			li.users a{
				background-image: url("<%= asset_path 'users.png' %>");
			}
			
			li.tags a{
				background-image: url("<%= asset_path 'tags.png' %>");
			}
			
			li.banners a{
				background-image: url("<%= asset_path 'banners.png' %>");
			}
		}
		
		ul{
			background-color: #eee;
			
			border-bottom:1px solid #CCC;
		}
		
		#content{
			margin:10px;
			min-height:400px;
		}
		
		#footer{
			margin:10px;
			height:30px;
			line-height:30px;
		}
	}
	
}
