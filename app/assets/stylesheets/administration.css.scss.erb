/* Administration */

body,td,th,p{
	font-family:helvetica, sans-serif;
	font-size:14px;
}

h1,h2,h3,p{ margin:0px; padding:0px; }
ul,li { list-style:none; magin:0px; padding:0px; }

a{text-decoration:none; color:#333;}

body{
	text-align:center;
	background-color:#f4f4f4;
}

#admin-deck{
	background-color:white;
	text-align:left;
	margin:0px auto;
	max-width:1000px;
	
	#wrap{
		
		#nav{
			ul,li{
				height:40px;
				line-height:40px;
			}
			li{
				float:left;
				a{
					height:40px;
					display:inline-block;
					padding-left:10px;
					padding-right:10px;
					font-size:18px;
				}
			}			
		}
		
		ul{
			background-color: #eee;
			
			border-bottom:1px solid #CCC;
		}
		
		#content{
			margin:10px;
			min-height:400px;
		}
		
		#footer{
			margin:10px;
			height:30px;
			line-height:30px;
		}
	}
	
}
